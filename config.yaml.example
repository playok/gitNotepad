# Git Notepad Configuration
# Copy this file to config.yaml and modify as needed

server:
    port: 8080
    host: 0.0.0.0
    base_path: ""
storage:
    path: ./data
    auto_init_git: true
editor:
    default_type: markdown
    auto_save: false
auth:
    enabled: true
    session_timeout: 168
    admin_username: admin
    admin_password_hash: ""  # Set on first run via terminal prompt
database:
    path: ./data/gitnotepad.db
logging:
    encoding: utf-8
encryption:
    enabled: false
    salt: ""  # Auto-generated on first run if encryption enabled
